package time;

public class Timer {	
	
	private double time=0;
	private double desiredTime=0;
	private TimerInterface ti;
	
	public Timer(TimerInterface ti, double time){
		this.ti=ti;
		this.desiredTime=time;
		Time.addTimer(this);
	}
	
	public default void update(double t){
		time+=t;
		if(time>=desiredTime){
			time-=desiredTime;
			ti.tick();
		}
	}
}
