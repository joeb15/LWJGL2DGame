package time;

import java.util.HashMap;
import java.util.List;

public class Time {

	private static long time=0;
	private static double delta=0;
	private static double totalGameTime=0;
	private static double secondCounter=0;
	public static int desiredTPS=60;
	public static int tps=0;
	
	private static HashMap<Double, List<Timer>> timers = new HashMap<Double, List<Timer>>();
	
	public static void addTimer(Timer t, double time){
		timers.add(t);
	}
	
	public static void update(){
		if(time==0)
			time = System.nanoTime();
		delta = (System.nanoTime()-time)/1E9;
		totalGameTime+=delta;
		secondCounter+=delta;
	}
	
	public static double getDelta(){
		return delta;
	}
	
}
